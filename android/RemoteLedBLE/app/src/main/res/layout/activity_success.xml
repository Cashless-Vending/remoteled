<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_header"
        android:padding="20dp"
        android:gravity="center_vertical">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Complete"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
        
        <TextView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">
            
            <!-- Success Icon -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/success_circle">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textColor="@color/success_text"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </FrameLayout>
            
            <!-- Success Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session Complete!"
                android:textColor="@color/success_text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            
            <!-- Success Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your device session has finished successfully"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />
            
            <!-- Order Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />
                    
                    <!-- Product -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/summary_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standard Cycle"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default" />
                    
                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duration"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/summary_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40:02 minutes"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default" />
                    
                    <!-- Amount Paid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amount Paid"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/summary_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2.50"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default" />
                    
                    <!-- Device -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Device"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/summary_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laundry Room A"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default" />
                    
                    <!-- Completed At -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Completed At"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/summary_completed_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3:10 PM"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Receipt Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_box"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Receipt details saved"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <!-- Done Button -->
            <Button
                android:id="@+id/done_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_success"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />
            
            <!-- Start Another Button -->
            <Button
                android:id="@+id/start_another_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Another Session"
                android:textColor="@color/primary_purple"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary"
                android:padding="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

