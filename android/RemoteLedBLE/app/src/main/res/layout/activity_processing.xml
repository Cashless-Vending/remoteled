<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_header"
        android:padding="20dp"
        android:gravity="center_vertical">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activating Device"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Processing Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">
                
                <!-- Spinner -->
                <ProgressBar
                    android:id="@+id/processing_spinner"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="32dp" />
                
                <!-- Status Text -->
                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing Payment..."
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                
                <!-- Sub Status Text -->
                <TextView
                    android:id="@+id/status_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please wait while we authorize your device"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
            
            <!-- Progress Steps Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <!-- Step 1 -->
                    <TextView
                        android:id="@+id/step_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Payment authorized"
                        android:textColor="@color/success_text"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />
                    
                    <!-- Step 2 -->
                    <TextView
                        android:id="@+id/step_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⟳ Creating authorization..."
                        android:textColor="@color/primary_purple"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />
                    
                    <!-- Step 3 -->
                    <TextView
                        android:id="@+id/step_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="○ Relaying to device via BLE..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:alpha="0.4"
                        android:layout_marginBottom="12dp" />
                    
                    <!-- Step 4 -->
                    <TextView
                        android:id="@+id/step_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="○ Verifying signature..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:alpha="0.4" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- LED Display Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device LED Status"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />
                    
                    <!-- LED Preview -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp">
                        
                        <View
                            android:id="@+id/led_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/led_circle_off" />
                        
                        <View
                            android:id="@+id/led_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/led_circle_off" />
                        
                        <View
                            android:id="@+id/led_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/led_circle_off" />
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/led_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting for activation..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




